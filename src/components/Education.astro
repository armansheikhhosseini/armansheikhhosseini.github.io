---
import { siteConfig } from "../config";
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
---

{
  hasEducation && (
    <section id="education" class="relative p-8 sm:p-12 md:p-16 lg:p-24 bg-gradient-to-b from-gray-850 via-gray-900 to-gray-900 overflow-hidden">
      <!-- Gradient Background -->
      <div class="absolute inset-0 bg-gradient-to-tl from-gray-900/20 via-transparent to-gray-800/15"></div>
      <!-- Top blending overlay -->
      <div class="absolute top-0 left-0 right-0 h-16 bg-gradient-to-b from-gray-850 to-transparent pointer-events-none z-10"></div>
      <div class="absolute top-0 left-0 w-2/5 h-3/5 bg-gradient-to-br from-green-900/8 to-transparent"></div>
      <div class="absolute bottom-0 right-0 w-1/3 h-1/2 bg-gradient-to-tl from-blue-900/8 to-transparent"></div>
      
      <div class="relative z-10">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-white leading-tight tracking-tight">
              Education
            </h2>
            <div
              class="w-[75px] h-[5px] mt-4 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-8">
              {siteConfig.education.map((edu) => (
                <div class="relative bg-gradient-to-br from-gray-800/90 via-gray-800/80 to-gray-700/90 rounded-xl shadow-lg border border-gray-700/50 p-6 sm:p-7 md:p-8 hover:shadow-xl hover:from-gray-700/90 hover:via-gray-700/80 hover:to-gray-600/90 hover:border-green-500/30 transition-all duration-300 backdrop-blur-sm group">
                  <!-- Gradient Overlay on Hover -->
                  <div class="absolute inset-0 bg-gradient-to-r from-green-600/5 to-blue-600/5 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                  
                  <div class="relative z-10">
                  <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-6">
                    <div>
                      <h3 class="text-xl sm:text-2xl font-bold text-white leading-tight tracking-wide">
                        {edu.degree}
                      </h3>
                      <p
                        class="text-lg sm:text-xl font-medium tracking-wide mt-1"
                        style={`color: ${siteConfig.accentColor}`}
                      >
                        {edu.school}
                      </p>
                    </div>
                    <span class="text-sm sm:text-base text-gray-300 mt-3 sm:mt-0 font-medium tracking-wide">
                      {edu.dateRange}
                    </span>
                  </div>

                  <ul class="space-y-4">
                    {edu.achievements.map((achievement) => (
                      <li class="flex items-start">
                        <span class="inline-block w-2 h-2 rounded-full bg-green-400 mt-2.5 mr-4 flex-shrink-0" />
                        <span class="text-base sm:text-lg text-gray-300 leading-relaxed tracking-wide">
                          {achievement}
                        </span>
                      </li>
                    ))}
                  </ul>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
      
      <!-- Gradient transition to next section -->
      <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-b from-transparent via-gray-900/60 to-gray-900 pointer-events-none z-20"></div>
    </section>
  )
}

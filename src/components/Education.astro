---
import { siteConfig } from "../config";
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
---

{
  hasEducation && (
  <section id="education" class="relative p-8 sm:p-12 md:p-16 lg:p-24 bg-transparent overflow-hidden">
      
      <div class="relative z-10">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-white leading-tight tracking-tight">
              Education
            </h2>
            <div
              class="w-[75px] h-[5px] mt-4 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-8">
              {siteConfig.education.map((edu) => (
                <div class="relative bg-gradient-to-br from-gray-800/90 via-gray-800/80 to-gray-700/90 rounded-xl shadow-lg border border-gray-700/50 p-6 sm:p-7 md:p-8 transition-all duration-300 group hover:shadow-xl hover:-translate-y-1">
                  <!-- Unified hover glow overlay -->
                  <div class="pointer-events-none absolute inset-0 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                       style="background: linear-gradient(90deg, color-mix(in oklab, var(--accent-color) 14%, transparent), color-mix(in oklab, var(--accent-secondary, #a78bfa) 14%, transparent));"></div>
                  
                  <div class="relative z-10">
                  <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-6">
                    <div>
                      <h3 class="text-xl sm:text-2xl font-bold text-white leading-tight tracking-wide">
                        {edu.degree}
                      </h3>
                      <p
                        class="text-lg sm:text-xl font-medium tracking-wide mt-1"
                        style={`color: ${siteConfig.accentColor}`}
                      >
                        {edu.school}
                      </p>
                    </div>
                    <span class="text-sm sm:text-base text-gray-300 mt-3 sm:mt-0 font-medium tracking-wide">
                      {edu.dateRange}
                    </span>
                  </div>

                  <ul class="space-y-4">
                    {edu.achievements.map((achievement) => (
                      <li class="flex items-start">
                        <span class="inline-block w-2 h-2 rounded-full mt-2.5 mr-4 flex-shrink-0" style="background: color-mix(in oklab, var(--accent-color) 75%, white)" />
                        <span class="text-base sm:text-lg text-gray-300 leading-relaxed tracking-wide">
                          {achievement}
                        </span>
                      </li>
                    ))}
                  </ul>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
      
      
    </section>
  )
}

---
import { siteConfig } from "../config";
---

<section id="about" class="relative p-8 sm:p-12 md:p-16 lg:p-24 bg-transparent">
  <div class="relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
      <div class="lg:col-span-4">
  <h2 class="section-title">About Me</h2>
  <div class="section-underline"></div>
      </div>

      <div class="lg:col-span-8 space-y-8">
        <p class="text-lg sm:text-xl md:text-2xl leading-relaxed text-gray-300 font-normal tracking-wide">{siteConfig.aboutMe}</p>

        <div class="pt-4">
          <h3 class="text-xl md:text-2xl font-semibold text-white mb-6 tracking-wide">Skills & Technologies</h3>
          <div class="flex flex-wrap gap-3">
            {siteConfig.skills.map((skill, index) => (
              <span
                class="skill-chip px-4 sm:px-5 py-2 sm:py-2.5 text-gray-200 rounded-lg text-sm sm:text-base md:text-lg font-medium tracking-wide border border-gray-600/40 btn-hover-lift"
                style={`--grad-from: var(--accent-color); --grad-to: var(--accent-secondary,#a78bfa); --border-hover: var(--accent-color); animation-delay: ${index * 0.1}s; background: linear-gradient(135deg, rgba(31,41,55,0.8), rgba(55,65,81,0.8));`}
              >
                <span class="relative z-10">{skill}</span>
              </span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .skill-chip:hover {
    background-image: linear-gradient(90deg, var(--grad-from), var(--grad-to));
    border-color: var(--border-hover);
  }
</style>

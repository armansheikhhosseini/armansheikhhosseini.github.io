---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{hasProjects && (
  <section id="projects" class="relative p-8 sm:p-12 md:p-16 lg:p-24 bg-transparent overflow-hidden clear-both">
    
    <div class="relative z-10 isolate">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
        <div class="lg:col-span-4">
          <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-white leading-tight tracking-tight">
            Projects
          </h2>
          <div
            class="w-[75px] h-[5px] mt-4 rounded-full"
            style={`background-color: ${siteConfig.accentColor}`}
          />
        </div>

        <div class="lg:col-span-8">
          <div class="space-y-8 relative z-10">
            <!-- Mobile Grid Toggle -->
            <div class="md:hidden mb-6">
              <button
                id="grid-toggle"
                class="px-4 py-2 bg-gray-700/80 text-gray-200 rounded-lg text-sm font-medium hover:bg-gray-600/80 transition-all duration-300 border border-gray-600/40"
              >
                Switch to Grid View
              </button>
            </div>
            
            <div id="projects-container" class="space-y-8">
              {siteConfig.projects.map((project, index) => (
                <div class="group relative project-card">
                  <a
                    href={project.link || "#"}
                    target={project.link ? "_blank" : "_self"}
                    rel={project.link ? "noopener noreferrer" : ""}
                    class="block relative p-6 sm:p-8 bg-gradient-to-br from-gray-700/90 via-gray-700/80 to-gray-600/90 rounded-xl shadow-lg border border-gray-600/50 transition-all duration-300 hover:from-gray-600/90 hover:via-gray-600/80 hover:to-gray-500/90 hover:shadow-xl hover:border-purple-500/30 hover:-translate-y-1"
                  >
                    {project.link && (
                      <div class="absolute top-6 right-6 w-10 h-10 flex items-center justify-center bg-gray-900/80 rounded-full text-white transition-all duration-300 group-hover:bg-purple-600/80">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 17L17 7M17 7H7M17 7V17" />
                        </svg>
                      </div>
                    )}

                    <div class="relative space-y-4">
                      <div>
                        <span class="text-sm font-bold tracking-wider text-blue-400">
                          0{index + 1}
                        </span>
                        <h3 class="text-xl sm:text-2xl font-bold text-white mt-2">
                          {project.name}
                        </h3>
                      </div>

                      <p class="text-gray-300 leading-relaxed">
                        {project.description}
                      </p>

                      {project.skills && project.skills.length > 0 && (
                        <div class="flex flex-wrap gap-2 pt-2">
                          {project.skills.map((skill) => (
                            <span class="px-3 py-1.5 bg-gray-800/80 text-gray-200 rounded-lg text-sm border border-gray-600/40 transition-all duration-300 group-hover:bg-purple-600/80 group-hover:text-white">
                              {skill}
                            </span>
                          ))}
                        </div>
                      )}
                    </div>
                  </a>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
    
    
  </section>
)}

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggleBtn = document.getElementById('grid-toggle');
    const container = document.getElementById('projects-container');
    let isGridView = false;
    
    if (toggleBtn && container) {
      toggleBtn.addEventListener('click', () => {
        isGridView = !isGridView;
        if (isGridView) {
          container.className = 'grid grid-cols-1 sm:grid-cols-2 gap-6';
          toggleBtn.textContent = 'Switch to List View';
        } else {
          container.className = 'space-y-8';
          toggleBtn.textContent = 'Switch to Grid View';
        }
      });
    }
  });
</script>
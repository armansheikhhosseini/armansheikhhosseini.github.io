---
import { siteConfig } from "./src/config";
console.log("Projects data:", siteConfig.projects);
console.log("Has projects:", siteConfig.projects && siteConfig.projects.length > 0);
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

<section id="projects" class="relative p-8 bg-gray-800">
  <h2 class="text-4xl font-bold text-white mb-8">Projects Test</h2>
  <p class="text-white">Has projects: {hasProjects.toString()}</p>
  <p class="text-white">Projects count: {siteConfig.projects?.length || 0}</p>
  
  {hasProjects && (
    <div class="space-y-4 mt-8">
      {siteConfig.projects.map((project, index) => (
        <div class="bg-gray-700 p-4 rounded">
          <h3 class="text-white text-xl">{project.name}</h3>
          <p class="text-gray-300">{project.description}</p>
        </div>
      ))}
    </div>
  )}
</section>
